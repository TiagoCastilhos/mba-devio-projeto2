@model DevXpert.Store.Core.Application.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1 class="mb-4">@ViewData["Title"]</h1>
<hr />

<div class="container mt-4">
    <dl class="row">
        <dt class="col-sm-2 text-muted">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-2 text-muted">@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao)</dd>

        <dt class="col-sm-2 text-muted">@Html.DisplayNameFor(model => model.Preco)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Preco)</dd>

        <dt class="col-sm-2 text-muted">@Html.DisplayNameFor(model => model.Estoque)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Estoque)</dd>

        <dt class="col-sm-2 text-muted">@Html.DisplayNameFor(model => model.Imagem)</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Imagem))
            {
                <img src="@Url.Content($"~/imagens/development/{Model.Imagem}")"
                     alt="Imagem do Produto"
                     class="img-thumbnail"
                     style="max-width: 300px;" />
            }
            else
            {
                <span class="text-muted">Imagem não disponível</span>
            }
        </dd>
    </dl>

    <div class="mt-4 d-flex gap-2">
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id" title="Atualizar">
            <i class="fas fa-pen"></i>
        </a>
        <a class="btn btn-outline-secondary" asp-action="Index" title="Voltar">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
</div>
