@using DevXpert.Store.Core.Application.ViewModels

@model CategoriaViewModel

@{
    ViewBag.Title = $"Excluir a Categoria: {Model.Nome}";
}

<h1 class="mb-4 text-danger">@ViewBag.Title</h1>

<partial name="_AlertPartial" />

<h4 class="text-warning mb-4">Tem certeza que deseja excluir a categoria <strong>@Model.Nome</strong>?</h4>

<dl class="row mb-4">
    <dt class="col-sm-2 text-muted">
        @Html.DisplayNameFor(model => model.Nome)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Nome)
    </dd>
    <dt class="col-sm-2 text-muted">
        @Html.DisplayNameFor(model => model.Descricao)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Descricao)
    </dd>
    <dt class="col-sm-2 text-muted">
        @Html.DisplayNameFor(model => model.Ativo)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Ativo)
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger" title="Excluir">
            <i class="fas fa-trash"></i> Excluir
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary" title="Voltar">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
    </div>
</form>

@section scripts {
    <script>
        $(function () {
            setTimeout(function() {
              $('#modalAlert').fadeOut('slow');
            }, 3000);
        });
    </script>
}