@using DevXpert.Store.Core.Application.ViewModels

@model CategoriaViewModel

@{
    ViewBag.Title = $"Editar Categoria: {Model.Nome}";
}

<h1 class="mb-4">@ViewBag.Title</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-begin="onBegin"
              data-ajax-complete="onComplete">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger small"></span>
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-success" title="Salvar">
                    <i class="fas fa-check"></i>
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary" title="Voltar">
                    <i class="fas fa-arrow-left"></i>
                </a>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Errors as string))
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Errors
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
