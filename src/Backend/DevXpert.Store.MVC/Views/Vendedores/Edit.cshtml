@using DevXpert.Store.Core.Application.ViewModels

@model VendedorViewModel

@{
    ViewBag.Title = $"Editar Vendedor {Model.Nome}";
}

<h1 class="mb-4">@ViewBag.Title</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-begin="onBegin"
              data-ajax-complete="onComplete">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-check mb-3">
                <input type="checkbox" asp-for="Ativo" class="form-check-input" id="Ativo" />
                <label asp-for="Ativo" class="form-check-label"></label>
                <span asp-validation-for="Ativo" class="text-danger small"></span>
            </div>

            @* Hidden fields *@
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Nome" />
            <input type="hidden" asp-for="Senha" />

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary" title="Salvar">
                    <i class="fas fa-check"></i>
                </button>
                <a asp-action="Index" class="btn btn-warning" title="Voltar">
                    <i class="fas fa-arrow-left"></i>
                </a>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Errors))
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewBag.Errors
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
