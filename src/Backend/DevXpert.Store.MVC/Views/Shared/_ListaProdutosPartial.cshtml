@model IEnumerable<DevXpert.Store.Core.Application.ViewModels.ProdutoViewModel>

<h2>Produtos do Vendedor <strong>@Model.First().Vendedor</strong></h2>

<partial name="_AlertPartial" />

<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Estoque</th>
            <th>Categoria</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.Nome</td>
                    <td>@produto.Descricao</td>
                    <td>@produto.Preco.ToString("C")</td>
                    <td>@produto.Estoque</td>
                    <td>@produto.Categoria</td>
                    <td>@(produto.Ativo ? "Ativo" : "Inativo")</td>
                    <td>
                        @await Html.PartialAsync("_ProdutoStatusForm", produto)
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td colspan="3" class="text-center text-muted">Nenhum Produto cadastrado.</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>
                <strong>Total: @Model.Count()</strong>
            </td>
            <td colspan="6"></td>
        </tr>
    </tfoot>
</table>

@section scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();

            setTimeout(function() {
              $('#modalAlert').fadeOut('slow');
            }, 3000);
        });
    </script>
}
