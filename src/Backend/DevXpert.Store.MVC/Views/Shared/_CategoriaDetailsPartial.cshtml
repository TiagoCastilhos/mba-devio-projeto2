@using DevXpert.Store.Core.Application.ViewModels
@model CategoriaViewModel

<div class="container mt-4">
    <dl class="row">
        <dt class="col-sm-2 text-muted">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-2 text-muted">@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao)</dd>

        <dt class="col-sm-2 text-muted">
            Status
        </dt>
        <dd class="col-sm-9">
            @(Model.Ativo ? "Ativo" : "Inativo")
        </dd>
    </dl>
</div>